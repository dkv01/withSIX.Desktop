<UserControl x:Class="SN.withSIX.Play.Presentation.Wpf.Views.Games.ServersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:core="clr-namespace:SN.withSIX.Core.Applications;assembly=SN.withSIX.Core.Applications"
             xmlns:games="clr-namespace:SN.withSIX.Play.Applications.ViewModels.Games;assembly=SN.withSIX.Play.Applications"
             xmlns:controls="clr-namespace:SN.withSIX.Core.Presentation.Wpf.Views.Controls;assembly=SN.withSIX.Core.Presentation.Wpf"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="720"
             cal:Bind.AtDesignTime="True">
    <d:DesignProperties.DataContext>
        <games:DesignTimeServersViewModel />
    </d:DesignProperties.DataContext>

    <Grid>
        <ContentControl Name="LibraryVM" />
        <Grid Margin="0 10 0 0">
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal"
                            DockPanel.Dock="Top">
                    <Button Command="{Binding SwitchQuickPlay}" ToolTip="Quick Play" x:Name="QAction"
                            Width="24" Height="24" Margin="0 0 4 0">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid Background="{DynamicResource AccentColorBrush}">
                                    <Viewbox MaxWidth="20" MaxHeight="20">
                                        <Canvas Width="13.000" Height="13.000">
                                            <Canvas.Resources>
                                                <Style TargetType="{x:Type Path}">
                                                    <Setter Property="Fill"
                                                            Value="{DynamicResource IdealForegroundColorBrush}" />
                                                </Style>
                                            </Canvas.Resources>

