                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:controls1="http://metro.mahapps.com/winfx/xaml/controls"
                         xmlns:controls="clr-namespace:SN.withSIX.Core.Presentation.Wpf.Views.Controls;assembly=SN.withSIX.Core.Presentation.Wpf"
                         mc:Ignorable="d"
                         d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <controls1:MetroProgressBar IsIndeterminate="True" VerticalAlignment="Top" x:Name="ProgressBar" />
        <TextBlock x:Name="ProgressText" FontSize="16" />
