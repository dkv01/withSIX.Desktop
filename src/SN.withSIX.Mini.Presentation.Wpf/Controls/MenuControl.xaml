<UserControl x:Class="SN.withSIX.Mini.Presentation.Wpf.Controls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SN.withSIX.Mini.Presentation.Wpf.Controls"
             xmlns:applications="clr-namespace:SN.withSIX.Core.Applications;assembly=SN.withSIX.Core.Applications"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Menu VerticalContentAlignment="Stretch" ItemsSource="{x:Null}"
          Background="Transparent" Padding="0" Margin="0">
        <MenuItem VerticalContentAlignment="Stretch" VerticalAlignment="Stretch"
                  Background="Transparent"
                  Padding="0" Margin="0">
            <MenuItem.Header>
                <TextBlock FontFamily="{DynamicResource IconFont}"
                           VerticalAlignment="Center"
                           FontSize="24"
                           Margin="4 0">
                    <Run Text="{x:Static applications:SixIconFont.withSIX_icon_Settings}" />
                    <Run Text="{x:Static applications:SixIconFont.withSIX_icon_Arrow_Down_Dir}" />
                </TextBlock>
            </MenuItem.Header>
        </MenuItem>
    </Menu>
</UserControl>