<controls:PopupControl x:Class="SN.withSIX.Core.Presentation.Wpf.Views.Popups.RequirementsPopupView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:controls="clr-namespace:SN.withSIX.Core.Presentation.Wpf.Views.Controls"
                       xmlns:popups="clr-namespace:SN.withSIX.Core.Applications.MVVM.ViewModels.Popups;assembly=SN.withSIX.Core.Applications.MVVM"
                       mc:Ignorable="d" Header="{Binding DisplayName, FallbackValue=Gots no header}"
                       d:DesignHeight="300" d:DesignWidth="300"
                       d:DataContext="{d:DesignInstance popups:RequirementsPopupViewModel}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Message}" Grid.Row="0" TextWrapping="Wrap" />
        <Button Content="{Binding CommandTitle}" Grid.Row="1" Margin="0 8 0 0"
                Command="{Binding Command}"
                Visibility="{Binding Command, Converter={StaticResource NotNullToVisibilityConverter}}" />
    </Grid>
</controls:PopupControl>