<UserControl x:Class="SN.withSIX.Core.Presentation.Wpf.Views.LicensesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:SN.withSIX.Core.Applications.MVVM.ViewModels;assembly=SN.withSIX.Core.Applications.MVVM"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewModels:LicensesViewModel}">
    <Grid Background="{StaticResource SixDarkGray}" VerticalAlignment="Top">
        <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 BorderThickness="0"
                 Margin="10,0,0,0" Background="Transparent"
                 VerticalAlignment="Top" HorizontalAlignment="Stretch" IsReadOnly="True"
                 Foreground="{StaticResource SixLightGray}" Text="{Binding Licenses.LicenseText, Mode=OneWay}" />
    </Grid>
</UserControl>